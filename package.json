{
  "name": "shopify-app",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@3.1.0",
  "scripts": {
    "build": "yarn workspaces foreach --no-private --topological --verbose run build",
    "build:ci": "yarn workspaces foreach --no-private --topological --verbose run build:ci",
    "clean": "yarn workspaces foreach --parallel --verbose run clean",
    "format": "yarn format:base .",
    "format:base": "prettier --config .prettierrc.ci.cjs --write",
    "lint": "yarn lint:base .",
    "lint:base": "eslint --config .eslintrc.ci.cjs --max-warnings=0",
    "postinstallDev": "husky install",
    "test": "yarn workspaces foreach --no-private --parallel --verbose run test --silent",
    "g:clean": "cd $INIT_CWD && git clean -dfX",
    "g:dpdm": "cd $INIT_CWD && dpdm --transform --tree false --warning false --exit-code circular:1"
  },
  "devDependencies": {
    "@commitlint/cli": "14.1.0",
    "@commitlint/config-conventional": "14.1.0",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "dpdm": "3.8.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "husky": "7.0.4",
    "lint-staged": "11.2.6",
    "prettier": "2.4.1",
    "prettier-plugin-organize-imports": "2.3.4",
    "typescript": "4.4.4"
  }
}
