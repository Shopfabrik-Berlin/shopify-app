{
  "name": "@shopfabrik/shopify-api",
  "version": "0.2.2",
  "description": "Shopify API Utilities",
  "homepage": "https://github.com/Shopfabrik-Berlin/shopify-app",
  "bugs": {
    "url": "https://github.com/Shopfabrik-Berlin/shopify-app/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Denis Goncharenko",
    "email": "dddenjer@gmail.com"
  },
  "files": [
    "./build"
  ],
  "main": "./build/cjs/index.js",
  "module": "./build/esm/index.js",
  "exports": {
    "require": "./build/cjs/index.js",
    "import": "./build/esm/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Shopfabrik-Berlin/shopify-app.git",
    "directory": "packages/shopify-api"
  },
  "sideEffects": false,
  "scripts": {
    "build": "pnpm build:cjs && pnpm build:esm",
    "build:ci": "pnpm dpdm && pnpm gen && pnpm build",
    "build:cjs": "tsc --project ./tsconfig.cjs.json",
    "build:esm": "tsc --project ./tsconfig.esm.json",
    "clean": "pnpm -w g:clean",
    "dpdm": "pnpm -w g:dpdm ./src/index.ts",
    "gen": "ts-node ./tools/codegen/codegen.ts",
    "gen:schema": "graphql-codegen --config ./tools/schema/codegen.yml",
    "test": "jest"
  },
  "dependencies": {
    "@apollo/client": "^3.2.1",
    "@dddenis/dataloader-fp": "^0.1.0",
    "@graphql-typed-document-node/core": "^3.0.0",
    "@shopfabrik/shopify-data": "^0.1.0",
    "axios": "^0.24.0",
    "cross-fetch": "^3.0.0",
    "deepmerge-ts": "^1.0.1",
    "graphql": "^15.0.0",
    "io-ts": "^2.2.15",
    "retry-ts": "^0.1.3",
    "ts-toolbelt": "^9.1.6"
  },
  "devDependencies": {
    "@babel/core": "7.16.0",
    "@babel/preset-env": "7.16.4",
    "@babel/preset-typescript": "7.16.0",
    "@graphql-codegen/cli": "2.3.0",
    "@graphql-codegen/introspection": "2.1.0",
    "@graphql-codegen/near-operation-file-preset": "2.2.2",
    "@graphql-codegen/plugin-helpers": "2.3.1",
    "@graphql-codegen/typed-document-node": "2.2.1",
    "@graphql-codegen/typescript": "2.4.1",
    "@graphql-codegen/typescript-operations": "2.2.1",
    "@types/jest": "27.0.3",
    "@types/node": "16.11.9",
    "fp-ts": "2.11.0",
    "jest": "27.4.3",
    "msw": "0.36.3",
    "ts-node": "10.4.0",
    "typescript": "4.4.4"
  },
  "peerDependencies": {
    "fp-ts": "^2.11.0"
  }
}
